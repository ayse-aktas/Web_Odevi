@model Coiffeur_Website.Models.Musteri

<h2>Müşteri Kayıt</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}

<form asp-action="KayitOl" method="post">
    <div class="form-group">
        <label for="Ad">Ad</label>
        <input type="text" asp-for="MusteriAdi" class="form-control" />
        <span asp-validation-for="MusteriAdi" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Soyad">Soyad</label>
        <input type="text" asp-for="MusteriSoyadi" class="form-control" />
        <span asp-validation-for="MusteriSoyadi" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Email">E-posta</label>
        <input type="email" asp-for="MusteriMail" class="form-control" />
        <span asp-validation-for="MusteriMail" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Sifre">Şifre</label>
        <input type="password" asp-for="Sifre" class="form-control" />
        <span asp-validation-for="Sifre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="TelNo">Telefon</label>
        <input type="phone" asp-for="TelNo" class="form-control" />
        <span asp-validation-for="Sifre" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Kayıt Ol</button>
</form>
