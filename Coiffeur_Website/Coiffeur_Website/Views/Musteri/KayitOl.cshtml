@model Coiffeur_Website.Models.Musteri

@{
    ViewData["Title"] = "Müşteri Kayıt";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="text-center">Müşteri Kayıt</h4>
                </div>
                <div class="card-body">
                    <form asp-action="KayitOl" method="post">
                        <div class="form-group mb-3">
                            <label asp-for="MusteriAdi" class="form-label">Ad</label>
                            <input asp-for="MusteriAdi" class="form-control" />
                            <span asp-validation-for="MusteriAdi" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="MusteriSoyadi" class="form-label">Soyad</label>
                            <input asp-for="MusteriSoyadi" class="form-control" />
                            <span asp-validation-for="MusteriSoyadi" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="MusteriMail" class="form-label">E-posta</label>
                            <input asp-for="MusteriMail" class="form-control" type="email" />
                            <span asp-validation-for="MusteriMail" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Sifre" class="form-label">Şifre</label>
                            <input asp-for="Sifre" class="form-control" type="password" />
                            <span asp-validation-for="Sifre" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="TelNo" class="form-label">Telefon Numarası</label>
                            <input asp-for="TelNo" class="form-control" />
                            <span asp-validation-for="TelNo" class="text-danger"></span>
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Kayıt Ol</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
