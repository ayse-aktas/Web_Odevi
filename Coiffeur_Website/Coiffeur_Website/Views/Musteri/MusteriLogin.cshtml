@model Coiffeur_Website.Models.Musteri

@{
    ViewData["Title"] = "Müşteri Giriş";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header text-center bg-primary text-white">
                    <h4>Müşteri Girişi</h4>
                </div>
                <div class="card-body">
                    @if (TempData["msj"] != null)
                    {
                        <div class="alert alert-danger">
                            @TempData["msj"]
                        </div>
                    }
                    <form asp-action="MusteriLogin" method="post">
                        <div class="mb-3">
                            <label asp-for="MusteriMail" class="form-label">E-posta</label>
                            <input asp-for="MusteriMail" class="form-control" placeholder="E-posta adresinizi giriniz" />
                            <span asp-validation-for="MusteriMail" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Sifre" class="form-label">Şifre</label>
                            <input asp-for="Sifre" class="form-control" type="password" placeholder="Şifrenizi giriniz" />
                            <span asp-validation-for="Sifre" class="text-danger"></span>
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Giriş Yap</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <p>Hesabınız yok mu? <a asp-controller="Musteri" asp-action="KayitOl" class="text-primary">Kayıt Ol</a></p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
