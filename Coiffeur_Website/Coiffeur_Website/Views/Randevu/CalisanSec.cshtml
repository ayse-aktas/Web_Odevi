@model List<Calisan>
@{
    ViewData["Title"] = "Çalışan Seçimi";
    var islem = ViewBag.Islem as Islem;
}

<h2>Çalışan Seçimi</h2>
<p><strong>Seçilen İşlem:</strong> @islem.Ad</p>

<p>Lütfen bir çalışan seçiniz:</p>
<ul class="list-group">
    @foreach (var calisan in Model)
    {
        <li class="list-group-item">
            @calisan.Ad
            <form asp-action="SaatSec" method="post" class="d-inline">
                <input type="hidden" name="calisanId" value="@calisan.Id" />
                <input type="hidden" name="islemId" value="@islem.Id" />
                <button type="submit" class="btn btn-primary btn-sm">Seç</button>
            </form>
        </li>
    }
</ul>
