@model Coiffeur_Website.Models.Islem

<h2>İşlem Güncelle</h2>

<form method="post" asp-action="EditIslem">
    <input type="hidden" name="IslemId" value="@Model.IslemId" />
    <div class="form-group">
        <label for="IslemAdi">İşlem Adı</label>
        <input type="text" id="IslemAdi" name="IslemAdi" class="form-control" value="@Model.IslemAdi" required />
    </div>
    <div class="form-group">
        <label for="Sure">Süre (dk)</label>
        <input type="number" id="Sure" name="Sure" class="form-control" value="@Model.Sure" required />
    </div>
    <div class="form-group">
        <label for="Ucret">Ücret (₺)</label>
        <input type="number" id="Ucret" name="Ucret" class="form-control" value="@Model.Ucret" required />
    </div>
    <button type="submit" class="btn btn-success">Güncelle</button>
</form>
