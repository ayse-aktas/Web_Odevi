@model Coiffeur_Website.Models.Islem

<h2>Yeni İşlem Ekle</h2>

<form method="post" asp-action="AddIslem">
    <div class="form-group">
        <label for="IslemAdi">İşlem Adı</label>
        <input type="text" id="IslemAdi" name="IslemAdi" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="Sure">Süre (dk)</label>
        <input type="number" id="Sure" name="Sure" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="Ucret">Ücret (₺)</label>
        <input type="number" id="Ucret" name="Ucret" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-success">Kaydet</button>
</form>
