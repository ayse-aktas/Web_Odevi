@model Coiffeur_Website.Models.Kullanici

@{
    ViewData["Title"] = "Kullanıcı Kayıt";
}

<h2>Kullanıcı Kayıt</h2>

@if (TempData["msj"] != null)
{
    <div class="alert alert-info">
        @TempData["msj"]
    </div>
}

<form asp-action="KullaniciKayit" method="post">
    <div class="form-group">
        <label for="Ad">Ad:</label>
        <input type="text" name="Ad" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="Soyad">Soyad:</label>
        <input type="text" name="Soyad" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="TelNo">Telefon Numarası:</label>
        <input type="text" name="TelNo" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="Sifre">Şifre:</label>
        <input type="password" name="Sifre" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Kayıt Ol</button>
</form>
